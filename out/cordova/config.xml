<?xml version='1.0' encoding='utf-8'?>
<widget id="hyperion-remote" version="0.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>hyperion-remote</name>
    <content src="index.html" />
    <access origin="*" />
	<preference name="Fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true"/>
	<preference name="BackgroundColor" value="0xff303030"/>
	<preference name="BackupWebStorage" value="none"/>
	<preference name="TopActivityIndicator" value="whiteLarge"/>
	<preference name="KeyboardDisplayRequiresUserAction" value="false"/>
	<preference name="iosPersistentFileLocation" value="Library" />
</widget>
